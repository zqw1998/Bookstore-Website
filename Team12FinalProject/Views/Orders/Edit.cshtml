@model Team12FinalProject.Models.Order
@using Team12FinalProject.Models
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderID" />
            <div class="form-group">
                <label asp-for="OrderNumber" class="control-label"></label>:
                @Html.DisplayFor(m => m.OrderNumber, new { @class = "form-control" })
                <span asp-validation-for="OrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>:
                @Html.DisplayFor(m => m.OrderDate, new { @class = "form-control" })
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<h4>Books</h4>
<table class="table table-sm table-striped table-hover">
    <tr>
        <th>Book Name</th>
        <th>Book Price</th>
        <th>Quantity</th>
        <th>Total Price</th>
    </tr>
    @foreach (OrderDetail od in Model.OrderDetails)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => od.Book.Title)</td>
            <td>@Html.DisplayFor(modelItem => od.BookPrice)</td>
            <td>@Html.DisplayFor(modelItem => od.Quantity)</td>
            <td>@Html.DisplayFor(modelItem => od.TotalPrice)</td>
        </tr>
    }
</table>
<div>
    <a asp-action="Index" asp-controller="Book" class="btn btn-primary">Add Another Book</a>
    <a asp-action="RemoveFromOrder" asp-route-id="@Model.OrderID" class="btn btn-primary">Edit Existing Items</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>