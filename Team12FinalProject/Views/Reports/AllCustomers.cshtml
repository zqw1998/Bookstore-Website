@model IEnumerable<Team12FinalProject.Models.AppUser>
@{
    ViewData["Title"] = "AllCustomer";
}
<h2>All Customer Report</h2>
<form asp-action="AllCustomers" asp-controller="Reports" method="get">
    <p class="form-group">
        <div class="form-group">
            <label>Sort By:</label>
            @Html.DropDownList("SelectedSort", (SelectList)ViewBag.AllFilters, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-secondary">Sort</button>
    </p>

</form>


<table class="table">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Customer Email
            </th>
            <th>
                Total Quantity
            </th>
            <th>
                Total Revenue
            </th>
            <th>
                Total Cost
            <th>
                Profit Margins
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Revenue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerProfit)
            </td>
        </tr>
        }
    </tbody>
</table>
<p>
    Displaying @ViewBag.Record number of records
</p>
<div>
    <a asp-action="Index">Back to Reports</a>
    <a asp-controller="Home" asp-action="Index">Home</a>
</div>
