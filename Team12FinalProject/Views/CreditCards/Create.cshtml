@model Team12FinalProject.Models.CreditCard
@using Team12FinalProject.Controllers

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>CreditCard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CardHolder" class="control-label"></label>
                <input asp-for="CardHolder" class="form-control" />
                <span asp-validation-for="CardHolder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditCardNumber" class="control-label"></label>
                <input asp-for="CreditCardNumber" class="form-control" />
                <div class="text-danger">@ViewBag.Message</div>
                <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Choose a credit card type:</label>
                <br>
                <label class="radio">@Html.RadioButton("CardType", CardType.Visa,true)Visa</label>
                <label class="radio">@Html.RadioButton("CardType", CardType.AmericanExpress)American Express</label>
                <br>
                <label class="radio">@Html.RadioButton("CardType", CardType.Discover)Discover</label>
                <label class="radio">@Html.RadioButton("CardType", CardType.MasterCard)Master Card</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

