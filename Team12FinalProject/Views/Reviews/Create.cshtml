@model Team12FinalProject.Models.Review
@using Team12FinalProject.Models
@{
    ViewData["Title"] = "Create";
}
<h2>Create</h2>
<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reviews" class="control-label"></label>
                <input asp-for="Reviews" class="form-control" />
                <span asp-validation-for="Reviews" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerRating" class="control-label"></label>
                <input asp-for="CustomerRating" class="form-control" />
                <span asp-validation-for="CustomerRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Details", "Books", new { id = ViewBag.id })
</div>