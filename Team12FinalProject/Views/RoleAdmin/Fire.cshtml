@model Team12FinalProject.Models.AppUser
@{
    ViewData["Title"] = "Fire";
}


        <h2>Are you sure you want to Enable or Disable this account?</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Disabled" /> @Html.DisplayNameFor(model => model.Disabled)
                </label>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}
<div>
    <a asp-action="Index">Back to Account Information</a>
</div>
