@model IEnumerable<Team12FinalProject.Models.Order>
@{
    ViewData["Title"] = "AllOrders";
}
<h2>All Orders Report</h2>
<form asp-action="AllOrders" asp-controller="Reports" method="get">
    <p class="form-group">
        <div class="form-group">
            <label>Sort By:</label>
            @Html.DropDownList("SelectedSort", (SelectList)ViewBag.AllFilters, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-secondary">Sort</button>
    </p>

</form>


<table class="table">
    <thead>
        <tr>
            <th>
                Order Number
            </th>
            <th>
                Order Number
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Revenue
            </th>
            <th>
                Weighted Average Cost
            <th>
                Profit Margins
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.FirstName) @Html.DisplayFor(modelItem => item.AppUser.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderProfit)
            </td>


        </tr>
        }
    </tbody>
</table>
<p>
    Displaying @ViewBag.Record number of records
</p>
<div>
    <a asp-action="Index">Back to Reports</a>
    <a asp-controller="Home" asp-action="Index">Home</a>
</div>
