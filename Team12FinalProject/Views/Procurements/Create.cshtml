@model Team12FinalProject.Models.Procurement
@{
    ViewData["Title"] = "Create";
}
<h2>Create Orders</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Select a Procurement Type:</label>
                <div class="form-group">
                    <label class="radio">@Html.RadioButton("SelectedType", ProcurementType.Manual, true)Manual Reorder</label>
                    <label class="radio">@Html.RadioButton("SelectedType", ProcurementType.Automatic)Automatic Reorder</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}