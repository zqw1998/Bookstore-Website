@model Team12FinalProject.Models.OrderDetail
@using Team12FinalProject.Models
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<h4>OrderDetail</h4>
<hr />
<p><span class="text-warning">@ViewBag.LowStock</span></p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderDetailID" />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookPrice" class="control-label"></label>
                @Html.DisplayFor(model => model.BookPrice, new { @class = "form-control" })
                <span asp-validation-for="BookPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="Orders" asp-action="Index">Back to List</a>
</div>