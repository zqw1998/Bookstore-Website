@using Team12FinalProject.Models
@model Team12FinalProject.Models.Procurement
@{
    ViewData["Title"] = "Details";
}
<h2>Procurement Detail</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProcurementID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProcurementID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProcurementType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ProcurementType)
        </dd>
        <dd>
            Manager
        </dd>
        <dd>
            @Html.DisplayFor(model => model.AppUser.FirstName)
        </dd>
    </dl>
</div>
<div>
    <h4>Books</h4>
    <table class="table table-sm table-hover table-striped">
        <thead>
            <tr>
                <th>Book</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Extended Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProcurementDetail pd in Model.ProcurementDetails)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => pd.Book.Title)</td>
                    <td>@Html.DisplayFor(modelItem => pd.BookPrice)</td>
                    <td>@Html.DisplayFor(modelItem => pd.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => pd.ExtendedPrice)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <table class="table table-sm table-bordered" style="width:30%">
        <tr>
            <th colspan="2" style="text-align:center">Order Summary</th>
        </tr>
        <tr>
            <td>Order Total</td>
            <td>@Html.DisplayFor(o => o.ProcurementTotal)</td>
        </tr>
    </table>
</div>
<div>
    <a asp-action="ProcurementList">Back to List</a>
</div>