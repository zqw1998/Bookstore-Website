@model IEnumerable<Team12FinalProject.Models.Coupon>
@using Team12FinalProject.Controllers
@using Team12FinalProject.Models
@{
    ViewBag.Title = "Index";
}
<h2>Welcome @ViewBag.Name!</h2>

@Html.ActionLink("Books", "Index", "Books", null, new { @class = "btn btn-primary" })
@if (User.IsInRole("Customer"))
{
    @Html.ActionLink("Orders", "Index", "Orders", null, new { @class = "btn btn-success" })
    @Html.ActionLink("Shopping Cart", "ShoppingCart", "Orders", null, new { @class = "btn btn-secondary" })
}
@if (User.IsInRole("Manager") || User.IsInRole("Employee"))
{
    @Html.ActionLink("Manage Users", "Index", "RoleAdmin", null, new { @class = "btn btn-secondary" })
    @Html.ActionLink("Pending Reviews", "PendingIndex", "Reviews", null, new { @class = "btn btn-info" })
    @Html.ActionLink("Shipping", "Index", "Shippings", null, new { @class = "btn btn-info" })
}
@if (User.IsInRole("Manager"))
{
    @Html.ActionLink("Orders", "Index", "Orders", null, new { @class = "btn btn-success" })
    @Html.ActionLink("Procurement", "Index", "Procurements", null, new { @class = "btn btn-warning" })
    @Html.ActionLink("Coupons", "Index", "Coupons", null, new { @class = "btn btn-danger" })
    @Html.ActionLink("Approved Reviews", "ApprovedIndex", "Reviews", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Report", "Index", "Reports", null, new { @class = "btn btn-dark" })
}
@if (User.IsInRole("Customer"))
{


    <h4>Current Promotions</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CouponCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    CouponType
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Coupon item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CouponCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CouponType)
                    </td>


                </tr>
            }
        </tbody>
    </table>

}